{
  "python.formatting.provider": "black",
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  "editor.formatOnType": true,
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.wordBasedSuggestions": "off",
    "editor.formatOnType": true,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "black-formatter.importStrategy": "useBundled",
  "black-formatter.path": [],
  "black-formatter.showNotifications": "off",
  "python.analysis.diagnosticSeverityOverrides": {},
  "python.globalModuleInstallation": true,
  "python.analysis.autoFormatStrings": false,
  "python.analysis.autoImportCompletions": false,
  "python.analysis.autoIndent": true,
  "python.analysis.autoSearchPaths": true,
  "black-formatter.args": ["--line-length", "88"],
  "python.languageServer": "Pylance",
  "python.analysis.typeCheckingMode": "basic",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.lintOnSave": true,
  "python.linting.pylintArgs": ["--disable=C0114,C0115,C0116"],
  "workbench.colorCustomizations": {
    "activityBar.background": "#342554",
    "titleBar.activeBackground": "#493475",
    "titleBar.activeForeground": "#FAF9FD"
  }
}

{
  "python.formatting.provider": "black",
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  "editor.formatOnType": true,
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.wordBasedSuggestions": "off",
    "editor.formatOnType": true,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "black-formatter.importStrategy": "useBundled",
  "black-formatter.path": [],
  "black-formatter.showNotification": "off",
  "python.analysis.diagnosticSeverityOverrides": {},
  "python.globalModuleInstallation": true,
  "python.analysis.autoFormatStrings": false,
  "python.analysis.autoImportCompletions": false,
  "python.analysis.autoIndent": true,
  "python.analysis.autoSearchPaths": true,
  "black-formatter.args": ["--line-length", "88"],
  "python.languageServer": "Pylance",
  "python.analysis.typeCheckingMode": "basic",
  "python.linting.enabled": true, // Enable linting in general
  "python.linting.pylintEnabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.mypyEnabled": true,
  "flake8.args": ["--max-line-length=88"],
  "flake8.importStrategy": "useBundled",
  "flake8.showNotification": "off",
  "flake8.ignorePatterns": [],
  "flake8.enabled": true,
  "flake8.severity": {
    "convention": "Information",
    "error": "Error",
    "fatal": "Error",
    "refactor": "Hint",
    "warning": "Warning",
    "info": "Information"
  },
  "pylint.args": ["--disable=C0111"], // Disable missing docstring warnings
  "pylint.importStrategy": "fromEnvironment", // Use pylint from the environment
  "pylint.lintOnChange": true, // Lint as you type
  "pylint.path": ["pylint"],
  "mypy.importStrategy": "useBundled",
  "mypy.showNotification": "off",
  "mypy.severity": {
    "note": "Information",
    "warning": "Warning",
    "error": "Error"
  },
  "workbench.colorCustomizations": {
    "activityBar.background": "#102C1D",
    "titleBar.activeBackground": "#173E28",
    "titleBar.activeForeground": "#F7FCFA"
  }
}
